{% extends "base.html.twig" %}
{% block body %}
    <h1 class ="text-danger text-center">Zprávy</h1>
    <h2 class="text-center">Posílání zpráv zaměstnancům</h2>

    <div class="d-flex justify-content-center mb-4 border-bottom pb-2">
        <a href="zakaznici" class="mr-4 text-dark font-weight-bold" style="font-size: 1.5em; margin-right: 40px;">Zákaznici</a>
        <a href="objednavky" class="mr-4 text-dark font-weight-bold" style="font-size: 1.5em; margin-right: 40px;">Objednávky</a>
        <a href="sklad" class="mr-4 text-dark font-weight-bold" style="font-size: 1.5em; margin-right: 40px;">Sklad</a>
        <a href="zamestnanci" class="text-dark font-weight-bold" style="font-size: 1.5em;">Zamestnanci</a>
    </div>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form onsubmit="odeslatFormular(); return false;">
        <div class="form-group">
          <label for="jmeno">Jméno:</label>
          <input type="text" class="form-control" id="jmeno">
        </div>
        <div class="form-group">
          <label for="predmet">Předmět:</label>
          <input type="text" class="form-control" id="predmet">
        </div>
        <div class="form-group">
          <label for="zprava">Zpráva:</label>
          <textarea class="form-control" id="zprava" rows="5"></textarea>
        </div>
      </form>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-md-6 text-center">
      <button type="submit" class="btn btn-primary" onclick="odeslatFormular()">Odeslat zprávu</button>
    </div>
  </div>
</div>

<script>
  function odeslatFormular() {
    // Vymazání obsahu polí formuláře
    jmeno.value = "";
    predmet.value = "";
    zprava.value = "";
    // Zobrazení alertu s potvrzením
    alert("Zpráva byla úspěšně odeslána");
  }
</script>
{% endblock %}